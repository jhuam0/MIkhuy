<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favoritos"
    android:background="@color/colorFondoAlternativa"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/cart_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorito"
                android:textColor="@color/botonesColor"
                android:textSize="30dp"
                android:fontFamily="@font/baloo_chettan"
                android:textStyle="bold" />


        </LinearLayout>
        <EditText
            android:id="@+id/filter_Favorites"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lavender_border"
            android:drawableRight="@drawable/ic_search_orange"
            android:paddingRight="20dp"

            >

        </EditText>
        <HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <GridLayout
        android:id="@+id/favorites_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="10dp"

        >

    </GridLayout>

</HorizontalScrollView>
    </LinearLayout>


</FrameLayout>