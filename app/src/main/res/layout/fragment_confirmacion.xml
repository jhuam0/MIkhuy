<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondoColor"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Confirmacion">

    <ImageView
        android:id="@+id/confirmacion_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_confirmacion" />

    <TextView
        android:id="@+id/confirmacion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ORDEN CONFIRMADA!"
        android:textColor="@color/black"
        android:textSize="30sp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_custom_oranje"
        app:backgroundTint="@null"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:fontFamily="@font/baloo_chettan"
        android:text="VOLVER:'v"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        />

</LinearLayout>