<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo1"
        android:label="mikhuy"
        android:roundIcon="@mipmap/ic_logo1_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAppDeComida"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY" />
        <activity
            android:name=".actividades.ComidaActivity"
            android:exported="false" />
        <activity
            android:name=".pedidos.PedidosActivity"
            android:exported="false" />
        <activity
            android:name=".actividades.ActivityProfile"
            android:exported="false" />
        <activity
            android:name=".actividades.ActivityFavoritos"
            android:exported="false" />
        <activity
            android:name=".actividades.ActivityPedido"
            android:exported="false" />
        <activity
            android:name=".NavBar"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".actividades.ActivitySignUp" />
        <activity android:name=".actividades.ActivityRecover" />
        <activity android:name=".actividades.ActivityMenu" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>